#include <iostream>
#include<vector>

using namespace std;

void rearrange(vector<int> &arr)
{
    
    int h=arr.size();
    int m=0,l=0;
    int count=0;
    
    while(m<h)
    {
        
        if((arr[m]<0 && arr[l]<0) || (arr[m]>0 && arr[l]<0))
        {
            m++;
            l++;
            //count++;
        }
        else if(arr[m]<0 && arr[l]>0)
        {
            int temp=arr[l];
            arr[l]=arr[m];
            arr[m]=temp;
            l++;
            m++;
            //count++;
        }
        else
        {
            m++;
            //count++;
            
        }
        
        
    }
    
    //cout<<count<<" uu";
    
    
    
}

int main()
{
    
    vector<int> arr={-12, 11, -13, -5,6, -7, 5, -3, 11};
    rearrange(arr);
    
    for(int i=0;i<arr.size();i++)
    {
        cout<<arr[i]<<" ";
    }

    return 0;
}
