#include <bits/stdc++.h>
#include <string>
using namespace std;

int count(string str)
{
    int count1=0;
    int count0=0;
    int cnt=0;
    for(int i=0;i<str.length();i++)
    {
        if(str[i]=='0')
        {
            count0++;
        }
        else
        {
            count1++;
        }
        
        if(count0==count1)
        {
            cnt++;
        }
    }
    
    if(cnt==0)
    {
        return -1;
    }
    return cnt;
    
}


int main()
{
    string str = "0100110101";
    
 
    cout << count(str );
 
    return 0;
}
