#include <iostream>
#include<string>
#include<typeinfo>

using namespace std;

string convert(string str,string arr[])
{
    int n=str.length();
    
    string ans="";
    
    for(int i=0;i<n;i++)
    {
        if(str[i]==' ')
        {
            ans=ans+"0";
        }
        else
        {
            int index=str[i]-'A';
            
            string key=arr[index];
            ans=ans+key;
        }
    }
    
    return ans; 
    
}

int main()
{
    string arr[]={"2","22","222",
                    "3","33","333",
                    "4","44","444",
                    "5","55","555",
                    "6","66","666",
                    "7","77","777","7777",
                    "8","88","888",
                    "9","99","999","9999"
                   };
    
    string str="HELLO WORLD";
    cout<<convert(str,arr);
    
    

    return 0;
}
